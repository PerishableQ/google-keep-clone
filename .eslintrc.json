{
    "env": {
        "node": true,
        "es2021": true,
        "react-native/react-native": true
    },
    "extends": [
        "@aramazanov",
        "@feature-sliced"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react-native"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-tabs": "off",
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4]
    }
}
